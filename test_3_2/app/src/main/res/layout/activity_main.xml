<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BLACK"
    tools:context="com.example.test_32.MainActivity">

    <Button
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@color/ORANGE"
        android:text="@string/B1"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@color/RED"
        android:text="@string/B2"
        android:layout_toLeftOf="@id/view1"
        android:layout_marginRight="70dp"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@color/YELLOW"
        android:text="@string/B3"
        android:layout_toLeftOf="@id/view1"
        android:layout_marginLeft="70dp"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/view4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/BLUE"
        android:text="@string/B4"
        android:layout_below="@id/view1"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@color/GREEN"
        android:text="@string/B5"
        android:layout_toLeftOf="@id/view4"
        android:layout_alignTop="@id/view4"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/view6"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@color/INDIGO"
        android:text="@string/B6"
        android:layout_toRightOf="@id/view4"
        android:layout_alignTop="@id/view4"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/VIOLET"
        android:text="@string/B7"
        android:layout_below="@id/view4"
        android:layout_marginTop="30dp" />

</RelativeLayout>
